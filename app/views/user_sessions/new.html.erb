<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                alt="login form"
                class="img-fluid" style="border-radius: 1rem 0 0 1rem;"
              />
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">


                <div class="d-flex align-items-center mb-3 pb-1">
                  <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                  <span class="h1 fw-bold mb-0">Copernicus Beer</span>
                </div>

              <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Connect your wallet</h5>



  <%= form_for(:user_session, url: login_path, data:{controller: "user-session"}) do |f| %>

    <%= f.text_field :eth_address, data:{"user-session-target":"eth_address"} %>
    <%= f.text_field :eth_signature, data:{"user-session-target":"eth_signature"} %>
    <%= f.text_field :eth_message, data:{"user-session-target":"eth_message"} %>
    <div class="form-outline mb-4">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer</span>
        <% end %>
    </div>
    <div class="pt-1 mb-4">   
      <%= f.submit "Log in", class: "btn btn-dark btn-lg btn-block", data: {action:"click->user-session#login"} %>
    </div>
    <span data-user-session-target="error_message">
    </span>
  <% end %>

  <a href="#!" class="small text-muted">Terms of use.</a>
  <a href="#!" class="small text-muted">Privacy policy</a>



              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>